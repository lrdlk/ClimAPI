# Configuraci√≥n de ClimAPI - Copiar a .env y completar

# API Keys (algunas APIs requieren registro)
OPENWEATHER_API_KEY=your_openweather_key_here
METEOSOURCE_API_KEY=your_meteosource_key_here
METEOBLUE_API_KEY=your_meteoblue_key_here

# AWS (opcional, para S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Servidor
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS - Dominios permitidos (separados por coma)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
DEBUG_MODE=False

# Cache
CACHE_TTL_MINUTES=15
CACHE_DIR=cache